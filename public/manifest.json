{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.3.0",
  "author": "Erwan Jugand",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "default_locale": "en",
  "action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "src/popup.html"
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "js": ["assets/contentScript.js"],
      "css": ["assets/themes.css"],
      "matches": ["https://www.steeple.fr/*", "https://tv.steeple.fr/*"]
    }
  ]
}
