{
  "name": "steeple-themes-chrome-extension",
  "version": "0.6.0",
  "author": "Erwan Jugand <erwan.jugand@gmail.com>",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && pnpm zip",
    "zip": "mkdir -p zip && npm-build-zip --source=dist --destination=zip",
    "check:prettier": "prettier --check .",
    "check:lint": "oxlint",
    "check:stylelint": "stylelint **/*.{scss,vue}",
    "check:all": "pnpm check:prettier && pnpm check:lint && pnpm check:stylelint",
    "fix:prettier": "prettier --log-level warn --write .",
    "fix:lint": "pnpm check:lint --fix --fix-suggestions",
    "fix:stylelint": "pnpm check:stylelint --fix",
    "fix:all": "pnpm fix:prettier && pnpm fix:lint && pnpm fix:stylelint"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "0.0.4",
    "@types/chrome": "0.1.1",
    "@types/node": "22",
    "npm-build-zip": "1.0.4",
    "oxlint": "1.11.0",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "sass": "1.89.2",
    "stylelint": "16.22.0",
    "stylelint-config-standard-scss": "15.0.1",
    "stylelint-plugin-use-baseline": "0.6.1",
    "typescript": "5.8.3",
    "vite": "7.0.5",
    "vite-plugin-web-extension": "4.4.5"
  }
}
