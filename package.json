{
  "name": "steeple-themes-chrome-extension",
  "version": "0.6.1",
  "author": "Erwan Jugand <erwan.jugand@gmail.com>",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && pnpm zip",
    "zip": "mkdir -p zip && npm-build-zip --source=dist --destination=zip",
    "check:prettier": "prettier --check .",
    "check:lint": "oxlint",
    "check:stylelint": "stylelint **/*.scss",
    "check:all": "pnpm check:prettier && pnpm check:lint && pnpm check:stylelint",
    "fix:prettier": "prettier --log-level warn --write .",
    "fix:lint": "pnpm check:lint --fix --fix-suggestions",
    "fix:stylelint": "pnpm check:stylelint --fix",
    "fix:all": "pnpm fix:prettier && pnpm fix:lint && pnpm fix:stylelint"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "0.1.3",
    "@types/chrome": "0.1.36",
    "@types/node": "24.10.11",
    "npm-build-zip": "1.0.4",
    "oxlint": "1.43.0",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "sass": "1.97.3",
    "stylelint": "17.1.1",
    "stylelint-config-recess-order": "7.6.0",
    "stylelint-config-standard-scss": "17.0.0",
    "stylelint-order": "7.0.1",
    "stylelint-plugin-use-baseline": "1.2.2",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-web-extension": "4.5.0"
  }
}
